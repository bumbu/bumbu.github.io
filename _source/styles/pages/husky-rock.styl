.huskyRock
  &__cardsSection
    //

  &__card
    width: 50%;
    height: 130px;
    border: 1px solid #ccc;
    float: left;
    box-sizing: border-box;
    position: relative;

  &__cardImage
    height: 100px;
    width: 100%;

    img
      display: block;
      max-width: 100%;
      max-height: 100%;
      margin: 0 auto;

  &__cardTitle
    text-align: center;

  &__cardCount
    position: absolute;
    top: 0;
    right: 0;
    min-width: 24px;
    text-align: center;
    background: #eee;
    color: #666;
    padding: 2px;
    border-bottom-left-radius: 12px;

  &__info
    &Header
      padding: 0 0 12px;

    &SectionWrapper
      clear: both;

    &Section
      padding: 20px 0 12px;

    &Title
      cursor: pointer;
      display: block;

    &Content
      //

  &__map
    // width: 100%;
    // min-height: 400px;
    border: 1px solid #ccc;
    box-sizing: border-box;
    position: relative;

    img
      margin: 0;
      display: block;

  &__mapOverlayRocks
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

  &__mapSequenceStep
    position: absolute;
    background: green;
    opacity: 0.5;
    border-radius: 4px;

  &__mapSequenceNote
    position: absolute;
    background: rgba(255,0,0,0.3);
    border-radius: 4px;

  &__mapSequenceNoteText
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    color: red;
    text-align: center;
    text-shadow: -1px -1px 0 #fff,  1px -1px 0 #fff,-1px 1px 0 #fff,1px 1px 0 #fff;

  &__mapSequenceStep--default
    background: gray;

  &__mapOverlayLines
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
